<p id="notice"><%= notice %></p>

<h1>Truck Brands</h1>

<table>
  <thead>
    <tr>
      <th>Abbr</th>
      <th>Name</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @truck_brands.each do |truck_brand| %>
      <tr>
        <td><%= truck_brand.abbr %></td>
        <td><%= truck_brand.name %></td>
        <td><%= truck_brand.logo %></td>
        <td><%= link_to 'Show', truck_brand %></td>
        <td><%= link_to 'Edit', edit_truck_brand_path(truck_brand) %></td>
        <td><%= link_to 'Destroy', truck_brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

