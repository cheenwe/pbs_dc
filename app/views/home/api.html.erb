<div class="page-header">
  <h1 class="page-title">
  <h4>证件类：</h4>
  </h1>
</div>

<div class="row row-cards">
  <% urls = %w(api/idcards api/fuck_idcards api/xingshizheng api/driving_license);i=0 %>
  <% infos = %w(身份证 身份证（特殊地址） 行驶证 驾照) %>

  <% urls.each do |url|%>
  <% name = url.split('/').last ||url %>
  <div class="col-sm-6 col-lg-3">
    <div class="card p-3">
      <div class="d-flex align-items-center">
        <span class="stamp stamp-md bg-<%= colors.sample %> mr-3">
          <i class="fe fe-dollar-sign"></i>
        </span>
        <div>
          <h4 class="m-0"><a href="<%= url %>" target="_blank" ><%= t name %> <small></small></a></h4>
          <small class="text-muted"><%= infos[i] %></small>
        </div>
      </div>
    </div>
  </div>
  <% i= i+1  %>
  <% end %>
</div>

