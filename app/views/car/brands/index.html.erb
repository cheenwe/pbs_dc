<p id="notice"><%= notice %></p>

<h1>Car Brands<small> &nbsp;<%= @data.size %></small></h1>
<form class="form-inline" action="brands" accept-charset="UTF-8" method="get" style="margin-bottom:20px">
  <input type="search" class="mr-3 form-control me-font-2" style="height:35px" name="q[abbr_cont]" placeholder="输入首字母" value="" autocomplete="off">
  <input type="search" class="mr-3 form-control me-font-2" style="height:35px" name="q[name_cont]" placeholder="输入品牌" value="" autocomplete="off">
<button type="submit" class="btn btn-primary me-font-1">搜 索</button>
</form>


<table>
  <thead>
    <tr>
      <th>Abbr</th>
      <th>Name</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_brands.each do |car_brand| %>
      <tr>
        <td><%= car_brand.abbr %></td>
        <td><%= car_brand.name %></td>
        <td><%= car_brand.logo %></td>
        <td><%= link_to 'Show', car_brand %></td>
        <td><%= link_to 'Edit', edit_car_brand_path(car_brand) %></td>
        <td><%= link_to 'Destroy', car_brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car Brand', new_car_brand_path %>

<%= will_paginate @car_brands %>