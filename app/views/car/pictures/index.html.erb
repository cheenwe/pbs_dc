<p id="notice"><%= notice %></p>

<h1>Car Pictures<small> &nbsp;<%= @data.size %></small></h1>
<table>
  <tbody>
  <tr>
    <%= search_form_for @q do |f| %>
    <td>
      <%= f.label :name %>
      <%= f.search_field :name_eq %>
    </td>
    <td>
      <%= f.label :imgpath %>
      <%= f.search_field :imgpath_cont %>
    </td>
    
    <td>
      <%= f.label :"检索" %>
      <%= f.submit %>
    </td>
    <% end %>
  </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Name</th>
      <th>Picture</th>
      <th>Imgpath</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_pictures.each do |car_picture| %>
      <tr>
        <td><%= car_picture.item_id %></td>
        <td><%= car_picture.name %></td>

        <td>
        <%= link_to 'View', car_picture.url %>
        </td>

        <td><%= image_tag("/uploads/cars/#{car_picture.imgpath}") rescue '' %> </td>

        <td><%= link_to 'Show', car_picture %></td>
        <td><%= link_to 'Edit', edit_car_picture_path(car_picture) %></td>
        <td><%= link_to 'Destroy', car_picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car Picture', new_car_picture_path %>

<%= will_paginate @car_pictures %>