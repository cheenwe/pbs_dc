<!DOCTYPE html>
<html>
  <head>
    <title>Date Center</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <div class="container">
    <div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg order-lg-first">
            <ul class="nav nav-tabs border-0 flex-column flex-lg-row">
              <li class="nav-item">
                <a href="/" class="nav-link active"><i class="fe fe-home"></i> Dashboard</a>
              </li>
              <li class="nav-item">
                <a href="/api" class="nav-link" data-toggle="dropdown"><i class="fe fe-box"></i> Interface</a>
              </li>

            </ul>
          </div>
        </div>
      </div>
    </div>
    <br>
    <% if notice %>
    <div class="alert alert-info" role="alert">
      <%= t notice %>
    </div>
    <% end %>
    <%= yield %>
    </div>

    <footer class="footer">
        <div class="container">
          <div class="row align-items-center flex-row-reverse">
            <div class="col-auto ml-lg-auto">
              <div class="row align-items-center">
                <div class="col-auto">
                  <a href="https://github.com/cheenwe/pbs_dc" class="btn btn-outline-primary btn-sm">Source code</a>
                </div>
              </div>
            </div>
            <div class="col-12 col-lg-auto mt-3 mt-lg-0 text-center">
              Copyright Â© <%= Date.today.year %> <a href="..">Cheenwe</a> All rights reserved.
            </div>
          </div>
        </div>
      </footer>
  </body>
</html>
