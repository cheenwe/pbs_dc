<p id="notice"><%= notice %></p>

<h1>Tuhu Brands</h1>

<table>
  <thead>
    <tr>
        <th>Abbr</th>
        <th>Logo</th>
      <th>Name</th>
      <th>Reamrk</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tuhu_brands.each do |tuhu_brand| %>
      <tr>
          <td><%= tuhu_brand.abbr %></td>
        <td>
          <%= image_tag(tuhu_brand.logo) rescue '' %>
        </td>
        <td><a href="/tuhu/versions?q[brand_id_eq]=<%= tuhu_brand.id %>"><%= tuhu_brand.name %></a></td>

        <td><%= tuhu_brand.reamrk %></td>
        <td><%= link_to 'Show', tuhu_brand %></td>
        <!-- <td><%= link_to 'Edit', edit_tuhu_brand_path(tuhu_brand) %></td>
        <td><%= link_to 'Destroy', tuhu_brand, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= will_paginate @tuhu_brands %>

